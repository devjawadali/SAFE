{
  "name": "saferide-backend",
  "version": "1.0.0",
  "description": "Backend server for SafeRide Women ride-hailing app",
  "main": "server.js",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:verbose": "NODE_ENV=test jest --verbose",
    "test:unit": "NODE_ENV=test jest --testPathPattern=__tests__/unit",
    "test:integration": "NODE_ENV=test jest --testPathPattern=__tests__/integration",
    "test:db:setup": "NODE_ENV=test node scripts/setupTestDb.js",
    "test:db:reset": "NODE_ENV=test node scripts/resetTestDb.js",
    "db:setup": "node scripts/setupDb.js",
    "db:reset": "psql -U postgres -c 'DROP DATABASE IF EXISTS saferide; CREATE DATABASE saferide;' && npm run db:setup",
    "db:migrate": "node db/migrate.js"
  },
  "keywords": [
    "saferide",
    "ride-hailing",
    "women-safety",
    "backend",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^9.16.0",
    "@sentry/profiling-node": "^9.16.0",
    "bad-words": "^3.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "expo-constants": "^18.0.10",
    "expo-secure-store": "^15.0.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.3.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "multer": "^1.4.5-lts.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "rate-limiter-flexible": "^8.1.0",
    "socket.io": "^4.6.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "@types/jest": "^29.5.12",
    "pg-mem": "^2.8.1",
    "socket.io-client": "^4.6.1"
  }
}
